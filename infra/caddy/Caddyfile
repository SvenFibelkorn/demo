{
  email {$ACME_EMAIL}
}

{$DOMAIN} {
  encode zstd gzip

  @api path /api*
  handle @api {
    uri strip_prefix /api
    reverse_proxy dotnet:8080
  }

  @grafana path /grafana*
  handle @grafana {
    uri strip_prefix /grafana
    reverse_proxy grafana:3000
  }

  handle {
    reverse_proxy webapp:80
  }
}